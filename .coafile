[all]
bears = LineCountBear, FilenameBear
files = **.py, **.yaml, **.rst
file_naming_convention = snake
ignore = **/__pycache__/**, **/__pycache__, __pycache__, __pycache__/**, **/*.pyc, *.pyc
max_lines_per_file = 1000

[all.python]
bears = PycodestyleBear, PyDocStyleBear
files = **.py
ignore = tests/**.py, setup.py
language = Python
editor = vim
max_line_length = 120

[all.yaml]
bears = YAMLLintBear
files = **.yaml
ignore = .zuul.yaml
max_line_length = 120

[zuul.yaml]
bears = YAMLLintBear
files = .zuul.yaml
max_line_length = 180